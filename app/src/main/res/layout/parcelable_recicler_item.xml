<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:id="@+id/parcelable_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/ivParcelable"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promotion Name"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/ivParcelable"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/txtParcelableName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promotion Price"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/green"
            android:layout_below="@id/txtParcelableName"
            android:layout_toEndOf="@id/ivParcelable"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/txtParcelablePrice"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>