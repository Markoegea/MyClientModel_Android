<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Login.ChangeLoginDataFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--LoginLayout!-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlLogin"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="visible"
                android:id="@+id/llLoginInfo">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20dp"
                    android:id="@+id/radioLogin">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cambiar\nCorreo"
                        android:textSize="20sp"
                        android:checked="true"
                        android:layout_margin="10dp"
                        android:id="@+id/radioEmail"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cambiar\nContraseña"
                        android:textSize="20sp"
                        android:layout_margin="10dp"
                        android:id="@+id/radioPassword"/>
                </RadioGroup>

                <!--EmailLayout!-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/radioLogin"
                    android:layout_margin="30dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/llEmail">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Email"
                        android:layout_marginBottom="20dp"
                        android:inputType="textEmailAddress"
                        android:id="@+id/edtEmail"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Confirmacion Email"
                        android:inputType="textEmailAddress"
                        android:id="@+id/edtReEmail"/>
                </LinearLayout>

                <!--PasswordLayout!-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/radioLogin"
                    android:layout_margin="30dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/llPassword">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Contraseña"
                        android:layout_marginBottom="20dp"
                        android:inputType="textPassword"
                        android:id="@+id/edtPassword"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Confirmacion Contraseña"
                        android:inputType="textPassword"
                        android:id="@+id/edtRePassword"/>
                </LinearLayout>
            </RelativeLayout>
            <!--ButtonLayout!-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actualizar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:layout_below="@id/llLoginInfo"
                android:id="@+id/btnUpdate" />
        </RelativeLayout>
    </ScrollView>
</FrameLayout>